{
  "compilerOptions": {
    "module": "amd",
    "noImplicitAny": false,
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "tsx",
    "target": "es5",
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "types": [ "arcgis-js-api" ]
  },
  "include": [
    "./app/*"
  ],
  "exclude": [
    "node_modules"
  ]
}